{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "IdentityServiceUrl": "https://localhost:5000",
  "ReverseProxy": {
    "Routes": {
      "auctionsRead" : {
        "ClusterId": "auctions",
        "Match": {
          "Path": "/acutions/{**catch-all}",
          "Methods":["GET"]
        },
        "Transforms": [
            {
                "PathPattern": "api/acutions/{**catch-all}"
            }
        ]
      },
      "auctionsWrirte" : {
        "ClusterId": "auctions",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/acutions/{**catch-all}",
          "Methods": ["POST", "PUT", "DELETE"]
        },
        "Transforms": [
            {
                "PathPattern": "api/acutions/{**catch-all}"
            }
        ]
      },
      "search": {
        "ClusterId": "search",
        "Match":{
            "Path": "/search/{**catch-all}",
            "Methods": ["GET"]
        },
        "Transforms": [
            {
                "PathPattern": "api/search/{**catch-all}"
            }
        ]
      }
    },
    "Clusters": {
      "auctions": {
        "Destinations": {
          "auctionApi": {
            "Address": "https://localhost:7001"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "https://localhost:7002"
          }
        }
      }
    }
  }
}
